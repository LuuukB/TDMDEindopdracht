<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDMDEindopdracht.MainPage"
             xmlns:viewmodel = "clr-namespace:TDMDEindopdracht.ViewModels"
             x:DataType="viewmodel:ViewModel"
             BackgroundColor="LightGreen"
             >


    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="StraGaan"
                Style="{StaticResource Headline}"
                FontSize="Header"
                TextColor="White"
                HorizontalOptions="Fill"
                BackgroundColor="Green"/>

            <Label
                Text="Welcome to StraGaan"
                Style="{StaticResource SubHeadline}"
                VerticalOptions="Center"
                HorizontalOptions="Center"/>

            <Frame BorderColor="Black" Padding="10" Margin="5" HorizontalOptions="Center">
                <VerticalStackLayout>
                    <!-- Titel van de GroupBox -->
                    <Label Text="Gekozen eerder gelopen route" FontSize="Medium" FontAttributes="Bold" />
                    <Label Text="{Binding SelectedName}" FontAttributes="Bold"/>
                    <!-- Inhoud van de GroupBox -->
                    <VerticalStackLayout Padding="10">
                        <HorizontalStackLayout>
                            <Label Text="Gelopen afstand: " />
                            <Label Text="{Binding SelectedDistance}"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Duur van de loop: " />
                            <Label Text="{Binding SelectedTotalRunTime}"/>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Gemmidelde snelheid: " />
                            <Label Text="{Binding SelectedAveradgeSpeed}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <Picker Title="Gelopen Routes" ItemsSource="{Binding Routes}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedRoute}">
                        <!-- moeten nog items toegevoegd worden aan de Picker -->

                    </Picker>

                    <Button
                        Text="Refresh Routes"
                        Command="{Binding RefreshRoutesCommand}"
                        VerticalOptions="Center"
                        BorderColor="Black"
                        BorderWidth="2"
                        BackgroundColor="#28A745"
                        TextColor="White"/>

                </VerticalStackLayout>


            </Frame>

            <Button
               x:Name="LoopActiviteitBtn"
                Text="Loop een volgende activiteit"
                Command="{Binding ViewMapCommand}"
                HorizontalOptions="End"
                BorderColor="Black"
                BorderWidth="2"
                BackgroundColor="#28A745"
                TextColor="White"/>
            

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
